  location /apt-cacher-ng/ {
    alias /usr/share/doc/apt-cacher-ng/html/;
    index on;
    try_files $uri $uri/ /index.html;
  }

  location /neomutt/ {
    alias /usr/share/doc/neomutt/html/;
    index on;
    try_files $uri $uri/ /index.html;
  }

  location / {
    root /var/www/librarian/;
    # index librarian.html;
    try_files $uri $uri/ /index.html;
  }
