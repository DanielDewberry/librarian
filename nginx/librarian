server {
  # server_name docs.nugget;
  listen 9000;
  add_header X-Served-By "Doc server";

  location /valgrind/ {
    alias /usr/share/doc/valgrind/html/;
    index on;
    try_files $uri $uri/ /index.html;
  }

  location /valgrind-tool/ {
    alias /usr/libexec/valgrind/;
    index on;
    try_files $uri $uri/ /dh_view.html;
  }

  # location /rust/ {
